    <h1>List User</h1>
    <table id="customers">
        <thead>
            <tr>
                <th>id</th>
                <th>fist Name</th>
                <th>last Name</th>
                <th>email</th>
                <th>address</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i < dataUser.length; i++) { %>
                <tr>
                  <td><%= dataUser[i].id %></td>
                  <td><%= dataUser[i].firstName %></td>
                  <td><%= dataUser[i].lastName %></td>
                  <td><%= dataUser[i].email %></td>
                  <td><%= dataUser[i].address %></td>
                  <td class="flex">
                      <button><a href="/detail/user/<%= dataUser[i].id %>">detail</a></button>
                      <form action="/edit-user/<%= dataUser[i].id %>" method="get">
                        <button type="submit" name="">edit</button>
                      </form>
                      <form action="/delete-user/<%= dataUser[i].id %>" method="post">
                        <button type="submit" name="">delete</button>
                      </form>
                  </td>
                </tr>
             <% } %>
        </tbody>
        
    </table>

    <h3>Add User</h3>

<div class="div">
  <form action="/create-user" method="POST">
